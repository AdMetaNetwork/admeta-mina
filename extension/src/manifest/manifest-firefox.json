{
  "manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "browser_action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "scripts": ["src/js/background.ts"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/js/content-script.ts"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "clipboardRead",
    "clipboardWrite"
  ]
}
